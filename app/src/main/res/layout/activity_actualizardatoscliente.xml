<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".actualizardatoscliente">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/blanco"
        android:layout_margin="15dp"
        android:textColor="@color/rojo"
        android:layout_height="wrap_content"
        android:text="EDITAR DATOS PARA ENVIO" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/txtnuevonombrecompletoactualizar"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="nombre completo"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/txtnuevotelefonoactualizar"
        android:hint="telefono"
        android:textSize="20dp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableStart="@drawable/ic_email"
        android:id="@+id/txtnuevocorreoactualizar"
        android:hint="correo"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinneractualizar"
        android:layout_width="match_parent"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:layout_height="50dp"

        />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/txtnuevodireccioncompletaactualizar"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="direccion completa"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/txtnuevodetalledireccionactualizar"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="detalle direccion"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/txtnuevopasswordactualizar"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_lock"
        android:gravity="center"
        android:hint="contraseÃ±a"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnactualizarusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg"
            android:textColor="@android:color/white"
            android:layout_weight="1"

            android:text="ACTUALIZAR DATOS" />

    </LinearLayout>
</LinearLayout>