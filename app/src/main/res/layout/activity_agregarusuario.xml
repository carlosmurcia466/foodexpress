<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".agregarusuario">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/txtnuevonombrecompleto"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="nombre completo"
            android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/txtnuevotelefono"
        android:hint="telefono"
        android:textSize="20dp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableStart="@drawable/ic_email"
        android:id="@+id/txtnuevocorreo"
        android:hint="correo"
        android:textSize="20dp" />

    android:background="@drawable/round_border"
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp"

            />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/txtnuevodireccioncompleta"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="direccion completa"
        android:textSize="20dp" />

   <EditText
       android:layout_width="match_parent"
       android:id="@+id/txtnuevodetalledireccion"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:hint="detalle direccion"
       android:textSize="20dp"/>

   <EditText
       android:layout_width="match_parent"
       android:id="@+id/txtnuevopassword"
       android:layout_height="wrap_content"
       android:inputType="textPassword"
       android:drawableStart="@drawable/ic_lock"
       android:gravity="center"
       android:hint="contraseÃ±a"
       android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnagregarusuarionuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg"
            android:textColor="@android:color/white"
            android:layout_weight="1"

            android:text="AGREGAR" />

        <Button
            android:id="@+id/btnsalirnuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:text="SALIR" />


    </LinearLayout>



</LinearLayout>